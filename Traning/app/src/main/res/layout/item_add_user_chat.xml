<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_item_add_chat"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_45sdp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    tools:ignore="UselessParent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_avatar_user"
        android:layout_width="@dimen/icon_project_size"
        android:layout_height="@dimen/icon_project_size"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="30dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_avatar_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/avataruser" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ln_trangthaiuser_chat"
        android:layout_width="@dimen/_350sdp"
        android:layout_height="@dimen/_47sdp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_40sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_47sdp"
            android:layout_marginEnd="@dimen/_7sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_emp_name_chat"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/nunitobold"
                android:singleLine="true"
                android:textColor="@color/BlackColor"
                android:textSize="@dimen/_14ssp"
                tools:text="Nguyễn Minh Khuê" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>